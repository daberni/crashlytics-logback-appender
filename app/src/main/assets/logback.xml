<configuration>
	<property name="EXT_FILES_DIR" value="${EXT_DIR:-/sdcard}/Android/data/${PACKAGE_NAME}/files"/>

	<appender name="logcat" class="ch.qos.logback.classic.android.LogcatAppender">
		<tagEncoder>
			<pattern>%class{0}</pattern>
		</tagEncoder>
		<encoder>
			<pattern>%class.%method\(%file:%line\) - %msg</pattern>
		</encoder>
	</appender>

	<appender name="Crashlytics" class="at.daberni.logback.apender.CrashlyticsLogbackAppender">
		<encoder>
			<pattern>%.-1level %class.%method\(%file:%line\) - %msg%n</pattern>
		</encoder>
	</appender>

	<root level="DEBUG">
		<appender-ref ref="Crashlytics"/>
		<appender-ref ref="logcat"/>
	</root>

</configuration>
